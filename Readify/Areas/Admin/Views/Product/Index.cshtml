@model IEnumerable<Product>
<div class="container">
<div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary>  <i class="bi bi-plus-circle-fill"></i> Create New Product</a>
        </div>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBIN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Title</td>
                    <td>@product.ISBN</td>
                    <td>@product.Price</td>
                    <td>@product.Author</td>
                    <td>Hisory</td>
                    <td>
                        <div class="btn-group d-flex align-content-center">

                            <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-priamry mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>



  
</div>