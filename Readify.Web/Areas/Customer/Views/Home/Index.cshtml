@model IEnumerable<Product>
@{
    
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">

    @foreach(var p in Model)
    {
        <div class="col-lg-3 col-sm-6">

            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded border-black">
                        <img src="/@p?.ImageURL?.Replace(@"\",@"/")" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@p.Title</p>
                                <p class="card-title text-black text-center fw-bold">@p.Author</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title text-dark opacity-75 text-center mb-0">List Price: <span class="text-decoration-line-through">@p.ListPrice.ToString("C")</span></p>
                                <p class="card-title text-dark opacity-75 text-center">As Low as: <span class="">@p.Price100.ToString("C")</span></p>
                            </div>
                        </div>
                        <div >
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info w-100 bg-gradient border-0">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
